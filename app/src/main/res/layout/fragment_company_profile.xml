<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loading"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/jdl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textColor="@android:color/black"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_margin="16dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/jdl">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/user"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12dp">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Perusahaan"
                        android:layout_marginBottom="4dp"
                        android:textSize="22sp"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="Email official" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/grey_border"
                    android:paddingVertical="4dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_industri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:layout_marginBottom="6dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bidang industri"
                        android:textSize="12sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/grey_border"
                    android:paddingVertical="4dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_tlp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:layout_marginBottom="6dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No. Telp/Fax"
                        android:textSize="12sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/grey_border"
                    android:paddingVertical="4dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_jml_pegawai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:layout_marginBottom="6dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jumlah Pegawai"
                        android:textSize="12sp"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat"
                android:textSize="12sp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tv_alamat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@android:color/black"
                android:layout_marginHorizontal="16dp"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#f2f2f2"
                android:layout_marginTop="24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/bt_edit_profile"
                    android:padding="13dp">

                    <ImageView
                        android:id="@+id/inbox1"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:tint="#a9a0b0"
                        android:src="@drawable/ic_edit"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="20dp">

                        <TextView
                            android:id="@+id/txttrades1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#3b3b3b"
                            android:text="Edit profil"/>

                        <ImageView
                            android:id="@+id/arrow1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_chevron_right_black_24dp"
                            android:layout_gravity="right"
                            android:tint="#a9a0b0"
                            android:layout_marginTop="-14dp"
                            android:layout_marginBottom="-3dp"
                            android:layout_marginRight="10dp"/>

                        <TextView
                            android:id="@+id/txthistory1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11sp"
                            android:textColor="#a9a9b0"
                            android:text="Atur profilmu di sini" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="#1A979797"/>




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/logout"
                    android:padding="13dp">

                    <ImageView
                        android:id="@+id/inbox"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:tint="#a9a0b0"
                        android:src="@drawable/ic_exit_to_app_black_24dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="20dp">

                        <TextView
                            android:id="@+id/txttrades"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#3b3b3b"
                            android:text="Log out"/>

                        <ImageView
                            android:id="@+id/arrow"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_chevron_right_black_24dp"
                            android:layout_gravity="right"
                            android:tint="#a9a0b0"
                            android:layout_marginTop="-14dp"
                            android:layout_marginBottom="-3dp"
                            android:layout_marginRight="10dp"/>

                        <TextView
                            android:id="@+id/txthistory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11sp"
                            android:textColor="#a9a9b0"
                            android:text="Tinggalkan akun untuk masuk dengan akun lain" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="#1A979797"/>




            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>