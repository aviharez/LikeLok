<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".company.CreateLokerActivity">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loading"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/jdl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="16dp">

        <ImageView
            android:id="@+id/bt_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_chevron_left_black_24dp"
            android:background="@android:color/transparent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buat Loker"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:textSize="28sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/jdl"
        android:layout_above="@id/bt_simpan">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Pekerjaan"
                android:textColor="@android:color/black" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_name"
                android:inputType="text"
                android:hint="Nama Pekerjaan"
                android:background="@drawable/loker_bg"
                android:paddingHorizontal="8dp"
                android:paddingVertical="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Pekerjaan"
                android:textColor="@android:color/black" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_jenis"
                android:inputType="text"
                android:hint="Jenis Pekerjaan"
                android:background="@drawable/loker_bg"
                android:paddingHorizontal="8dp"
                android:paddingVertical="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gaji"
                android:textColor="@android:color/black" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_fee"
                android:inputType="number"
                android:hint="Gaji"
                android:background="@drawable/loker_bg"
                android:paddingHorizontal="8dp"
                android:paddingVertical="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deskripsi Pekerjaan"
                android:textColor="@android:color/black" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_deskripsi"
                android:background="@drawable/loker_bg"
                android:paddingHorizontal="8dp"
                android:paddingVertical="8dp"
                android:hint="Deskripsi"
                android:maxLines="5"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:lines="5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jumlah Lowongan"
                android:textColor="@android:color/black" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_lowongan"
                android:inputType="number"
                android:hint="Jumlah Lowongan"
                android:background="@drawable/loker_bg"
                android:paddingHorizontal="8dp"
                android:paddingVertical="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tingkat Pendidikan"
                android:textColor="@android:color/black" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_tingkat"
                android:inputType="text"
                android:hint="Tingkat Pendidikan"
                android:background="@drawable/loker_bg"
                android:paddingHorizontal="8dp"
                android:paddingVertical="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Berakhir pada"
                android:textColor="@android:color/black" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_deadline"
                android:inputType="date"
                android:hint="Deadline"
                android:background="@drawable/loker_bg"
                android:paddingHorizontal="8dp"
                android:paddingVertical="8dp"
                android:clickable="true"
                android:focusable="false"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Poster"
                android:textColor="@android:color/black" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp">

                <ImageButton
                    android:id="@+id/ib_upload"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/loker_bg"
                    android:src="@drawable/ic_add_black_24dp" />

                <ImageView
                    android:id="@+id/iv_pic"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@android:color/transparent"
                    android:scaleType="centerCrop"
                    android:layout_marginHorizontal="12dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/bt_simpan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="SIMPAN"
        android:textColor="@android:color/white"
        android:background="@color/colorAccent"
        android:paddingVertical="4dp"
        android:stateListAnimator="@null"
        android:elevation="16dp" />

</RelativeLayout>